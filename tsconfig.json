{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["lua-types/5.1", "@asledgehammer/pipewrench", "@asledgehammer/pipewrench-events", "zstash"]
  },
  "tstl": {
    "luaLibImport": "require",
    "noHeader": true,
    "tstlVerbose": false,
    "luaPlugins": [{ "name": "@asledgehammer/tstl-pipewrench" }]
  },
  "include": ["src"]
}
